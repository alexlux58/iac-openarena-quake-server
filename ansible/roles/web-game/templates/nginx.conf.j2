# Nginx configuration for serving browser-based games
user {{ nginx_user }};
worker_processes auto;
error_log /var/log/nginx/error.log;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;

    sendfile            on;
    tcp_nopush          on;
    tcp_nodelay         on;
    keepalive_timeout   65;
    types_hash_max_size 4096;

    include             /etc/nginx/mime.types;
    default_type        application/octet-stream;

    server {
        listen       {{ web_game_port }} default_server;
        listen       [::]:{{ web_game_port }} default_server;
        server_name  _;
        root         {{ web_game_dir }};

        # Load configuration files for the default server block.
        include /etc/nginx/default.d/*.conf;

        location / {
            try_files $uri $uri/ /index.html;
        }

        # Game subdirectories
        location /2048/ {
            alias {{ web_game_dir }}/2048/;
            try_files $uri $uri/ /2048/index.html;
        }

        location /pvp/ {
            alias {{ web_game_dir }}/pvp/;
            try_files $uri $uri/ /pvp/index.html;
        }

        location /pacman/ {
            alias {{ web_game_dir }}/pacman/;
            try_files $uri $uri/ /pacman/index.html;
        }

        location /mario/ {
            alias {{ web_game_dir }}/mario/;
            try_files $uri $uri/ /mario/index.html;
        }

        location /snake/ {
            alias {{ web_game_dir }}/snake/;
            try_files $uri $uri/ /snake/index.html;
        }

        location /tetris/ {
            alias {{ web_game_dir }}/tetris/;
            try_files $uri $uri/ /tetris/index.html;
        }

        location /pong/ {
            alias {{ web_game_dir }}/pong/;
            try_files $uri $uri/ /pong/index.html;
        }

        location /flappy/ {
            alias {{ web_game_dir }}/flappy/;
            try_files $uri $uri/ /flappy/index.html;
        }

        location /spaceinvaders/ {
            alias {{ web_game_dir }}/spaceinvaders/;
            try_files $uri $uri/ /spaceinvaders/index.html;
        }

        location /breakout/ {
            alias {{ web_game_dir }}/breakout/;
            try_files $uri $uri/ /breakout/index.html;
        }

        location /asteroids/ {
            alias {{ web_game_dir }}/asteroids/;
            try_files $uri $uri/ /asteroids/index.html;
        }

        # QuakeJS - proxy to Docker container
        # Handle /quakejs (without trailing slash) - redirect to /quakejs/
        location = /quakejs {
            return 301 /quakejs/;
        }

        # Proxy QuakeJS assets directory - MUST come before other location blocks
        # The game needs /assets/manifest.json to load properly.
        #
        # IMPORTANT: We must prevent the later regex locations (like ~* \.(js|json)$)
        # from matching /assets/manifest.json and serving a local 404.
        # Use ^~ so this prefix location wins over regex locations.
        #
        # Use trailing slash in both location and proxy_pass to preserve path correctly.
        location ^~ /assets/ {
            proxy_pass https://localhost:8081/assets/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }
        
        # Handle /assets (without trailing slash) - redirect to /assets/
        location = /assets {
            return 301 /assets/;
        }

        # Proxy QuakeJS static assets (served at root level by container)
        # These are referenced as absolute paths like /game.css, /ioquake3.js
        # Container's port 443 serves static files, mapped to host port 8081
        location ~ ^/(game\.css|ioquake3\.js|favicon.*\.(ico|png))$ {
            proxy_pass https://localhost:8081;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }

        # Proxy /quakejs/ to QuakeJS Docker container root
        # Container's port 443 serves static files, mapped to host port 8081
        # The container serves:
        #   - / (lobby/index.html)
        #   - /ffa/ (game page)
        #   - /admin/ (admin page)
        location /quakejs/ {
            proxy_pass https://localhost:8081/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
            # WebSocket support for real-time gameplay
            proxy_buffering off;
            # Don't verify SSL certificate (self-signed cert)
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }
        
        # Explicitly handle /quakejs/ffa/ to ensure it works correctly
        # This ensures /quakejs/ffa/ is properly proxied to container's /ffa/
        location /quakejs/ffa/ {
            proxy_pass https://localhost:8081/ffa/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
            proxy_buffering off;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }

        # Proxy /ffa/ to QuakeJS container (game page)
        # Container's port 443 serves static files, mapped to host port 8081
        location /ffa/ {
            proxy_pass https://localhost:8081/ffa/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
            proxy_buffering off;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }

        # Proxy /admin/ to QuakeJS container (admin page)
        # Container's port 443 serves static files, mapped to host port 8081
        location /admin/ {
            proxy_pass https://localhost:8081/admin/;
            proxy_http_version 1.1;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 300s;
            proxy_connect_timeout 75s;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }

        # Proxy WebSocket connections to QuakeJS container port 8080
        # The game's JavaScript is patched to use /quakejs-ws/ instead of :8080
        # This allows WebSocket connections to work through Cloudflare (which only proxies 80/443)
        # Note: The container's nginx on port 8080 expects connections at root (/), so we strip /quakejs-ws/
        location /quakejs-ws/ {
            proxy_pass https://localhost:8080/;
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
            proxy_read_timeout 86400s;
            proxy_send_timeout 86400s;
            proxy_connect_timeout 75s;
            proxy_buffering off;
            proxy_ssl_verify off;
            proxy_ssl_server_name off;
        }

        # Tic-Tac-Toe location commented out
        # location /tictactoe/ {
        #     alias {{ web_game_dir }}/tictactoe/;
        #     try_files $uri $uri/ /tictactoe/index.html;
        # }

        # Serve game files with proper MIME types
        location ~* \.(wasm|data)$ {
            add_header Content-Type application/octet-stream;
            add_header Cross-Origin-Embedder-Policy require-corp;
            add_header Cross-Origin-Opener-Policy same-origin;
        }

        location ~* \.(js|json)$ {
            add_header Content-Type application/javascript;
            add_header Cache-Control "public, max-age=3600";
        }

        location ~* \.(png|jpg|jpeg|gif|svg|ico)$ {
            add_header Cache-Control "public, max-age=3600";
        }

        # Large file support for game assets
        client_max_body_size 100M;

        error_page 404 /404.html;
        location = /404.html {
        }

        error_page 500 502 503 504 /50x.html;
        location = /50x.html {
        }
    }
}
